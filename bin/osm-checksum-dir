#!/bin/sh
# Copyright (c) 2012-2016 Wolfram Schneider, http://bbbike.org
#
# osm-checksum-dir - compute checksum in a given directory
#

PATH=/bin:/sbin:/usr/bin; export PATH
set -e

: ${OSM_CHECKSUM=true}

usage () {
   echo "$@"
   echo "usage directory"
   exit 1
}

$OSM_CHECKSUM || exit 0

dir="$1"
test -d "$dir" || usage "dir $dir does not exists"
: ${enable_sha=true}

md5sum=`which md5 md5sum false 2>/dev/null | head -n 1`
: ${SHA="shasum -a 256"}

cd $dir
for file in $dir/*.pbf
do

    $md5sum $file &
    if $enable_sha; then
       $SHA $file &
    fi
    wait
done | sort > CHECKSUM.tmp

mv -f CHECKSUM.tmp CHECKSUM.txt
